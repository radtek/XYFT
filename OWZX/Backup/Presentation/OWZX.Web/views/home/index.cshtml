@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@{@WorkContext.ShopConfig.SiteTitle}</title>
    @Html.Raw(WorkContext.ShopConfig.SEOKeyword)
    @Html.Raw(WorkContext.ShopConfig.SEODescription)
    <link href="@{@WorkContext.CSSCDN}/css/base.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/home.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/index.css"  rel="stylesheet" type="text/css" />
    <script src="@{@WorkContext.ScriptCDN}/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/datepicker/WdatePicker.js"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/common.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/jquery.soChange.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/home.js"></script>
    <script src="/components/jqimgafter/jquery.lazyload.js"></script>
    <script>
        $(function ()
        {
            $("img[original]").lazyload({
                placeholder: "/components/jqimgafter/grey.gif",
                effect: "fadeIn"
            });
        });
    </script>
    <style>
        .hpdh{ position: fixed;right: 0px;top:40%;background-color: #333; color: white;text-align: center;width:60px;height: 200px;}
    .hpdh img{margin-left:2px;}
    .hpdh p{margin-top: 3px;background: #333;}
    .hpdh p:hover{color: red; cursor: pointer;}
    </style>
</head>
<body>
@Html.Partial("_header")
    <!-- 有浮动滑块 -->
    <div class="hpdh">
        <p><img src="../images/index/kehu.png" alt="" /><br />联系我们</p>
        <p><img src="../images/index/shijian.png" alt="" /><br />预约量房</p>
        <p><img src="../images/index/jincheng.png" alt="" /><br />工程进度</p>
        <p class="top"><img src="../images/index/top1.png" alt="" /><br /><span style="background: #333;color: #fff;">TOP</span></p>
    </div>
    <div class="mid">
        <!--预约、登录-->
        <div id="banner" style="position:relative;z-index:2;width:1220px;margin:0 auto;margin-top:17px;">
            <div id="order">
                <div style="width:300px;height:410px;border:1px solid #eaeaea;float:left;">
                    <div class="ind_reserve" style="float:left;width:50%;text-align:center;height:58px;line-height:58px;">
                        <span><img /></span>
                        <span>留言量房</span>
                    </div>
                    <div class="ind_reserve" style="float:left;width:50%;text-align:center;background:#f8f8f8;height:58px;line-height:58px;">
                        <span><img /></span>
                        <span>咨询量房</span>
                    </div>
                    <div class="clear"></div>
                    <div style="width:300px;height:1px;background:#ececec;"></div>
                    <div class="Message">
                        <ul>
                            <li style="margin-left:-150px;font-size:12px;color:#6a6a6a;">10秒留言，预约量房</li>
                            <li>
                                <input type="text" id="name" placeholder="您的称呼" autocomplete="off" /><br />
                                <span style="float: left;margin-left: 20px;font-size: 12px;color: red;height: 22px;"></span><br />
                            </li>
                            <li>
                                <input type="text" class="Wdate" id="time" placeholder="预约的时间" onfocus="WdatePicker({minDate:'%y-%M-%d'})" autocomplete="off" /><br />
                                <span style="float: left;margin-left: 20px;font-size: 12px;color: red;height: 22px;"></span><br />
                            </li>
                            <li>
                                <input type="text" id="address" placeholder="预约的地点" autocomplete="off" /><br />
                                <span style="float: left;margin-left: 20px;font-size: 12px;color: red;height: 22px;"></span><br />
                            </li>
                            <li>
                                <input type="text" id="phone" placeholder="您的手机号" autocomplete="off" /><br />
                                <span style="float: left;margin-left: 20px;font-size: 12px;color: red;height: 22px;"></span><br />
                            </li>
                            <li><input type="button" id="reserve" name="submit" value="立即预约" style="background:#f25619; width:260px;color:#ffffff;padding:0;margin-top:32px;" /></li>
                        </ul>
                    </div>
                    <div class="contact" style="display:none;font-size:14px;padding-left:10px;">
                        <div style="margin-top:20px;">
                            <span><h5 style="padding-left:2px;">客服热线：</h5></span><span style="margin-left:85px;">400-900-286</span>

                        </div>
                        <div style="margin-top:20px;">
                            <table>
                                <tr>
                                    <th>在线客服：</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th></th>
                                    <td style="background: url('../../images/index/doc_18.gif') no-repeat;width:134px;height:31px;line-height:31px;text-align:center;">
                                        <a style="color: #666666; font-size: 14px; background: url(../../images/index/doc_19.gif) no-repeat left center;
    background-position-x:10px; padding-left:36px; display: inline-block;">客服-小千</a>
                                    </td>
                                </tr>
                                <tr></tr>
                                <tr>
                                    <th></th>
                                    <td style="background: url('../../images/index/doc_18.gif') no-repeat;width:134px;height:31px;line-height:31px;text-align:center;">
                                        <a style="color: #666666; font-size: 14px; background: url(../../images/index/doc_19.gif) no-repeat left center;
    background-position-x:10px; padding-left:36px; display: inline-block;">客服-小古</a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div style="width:897px; height:410px;border:1px solid #eaeaea;float:right;">
                    <div id="index1">
                        <div class="indexPic">
                            @{
                            List<AdvertInfo> bannerList = Adverts.GetAdvertList(45);
                            }
                            <ul>
                                @foreach (AdvertInfo info in bannerList)
                                {
                                    <li><a href="@info.Url"><img original="@{@WorkContext.ImageCDN}/upload/adv/@info.Image" width="897" height="412" /></a></li>
                                }
                            </ul>
                            <div class="indexPicBT">
                                @for (int i = 1; i <= bannerList.Count; i++)
                                {
                                    <a href="#">@i</a>
                                }
                                <div class="clear"></div>
                            </div>
                            @if (bannerList.Count > 1)
                            {
                                <script type="text/javascript">
                                    $("#index1 .indexPic li").soChange({
                                        thumbObj:"#index1 .indexPicBT a",
                                        thumbNowClass:"hot",
                                        changeTime:4200,
                                        autoChange:true,
                                        slideTime:300
                                    })
</script>
                            }
                        </div>
                    </div>

                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <!--产品展示-->
        <div class="FAB" style="border:1px solid #eaeaea;background:#F8F8F8; width:1220px;margin:0 auto;margin-top:30px;padding-top:10px;">
            <ul>
                <li style="width:152px;text-align:center;float:left;"><a href="#"><img src="@{@WorkContext.ImageCDN}/images/index/expimg1.jpg" /><h6>客厅</h6></a></li>
                <li style="width:152px;text-align:center;float:left;"><a href="#"><img src="@{@WorkContext.ImageCDN}/images/index/expimg2.jpg" /><h6>卧室</h6></a></li>
                <li style="width:152px;text-align:center;float:left;"><a href="#"><img src="@{@WorkContext.ImageCDN}/images/index/expimg3.jpg" /><h6>餐厅</h6></a></li>
                <li style="width:152px;text-align:center;float:left;"><a href="#"><img src="@{@WorkContext.ImageCDN}/images/index/expimg4.jpg" /><h6>厨房</h6></a></li>
                <li style="width:152px;text-align:center;float:left;"><a href="#"><img src="@{@WorkContext.ImageCDN}/images/index/expimg5.jpg" /><h6>卫生间</h6></a></li>
                <li style="width:152px;text-align:center;float:left;"><a href="#"><img src="@{@WorkContext.ImageCDN}/images/index/expimg6.jpg" /><h6>阳台</h6></a></li>
                <li style="width:152px;text-align:center;float:left;"><a href="#"><img src="@{@WorkContext.ImageCDN}/images/index/expimg7.jpg" /><h6>背景墙</h6></a></li>
                <li style="width:152px;text-align:center;float:left;"><a href="#"><img src="@{@WorkContext.ImageCDN}/images/index/expimg8.jpg" /><h6>吊顶</h6></a></li>
                <div class="clear"></div>
            </ul>
        </div>
        <!--业务流程-->
        <div id="BRP" style="width:1220px;margin:0 auto;margin-top:40px;">
            <div>
                <span style="font-size:30px;color:#333333;">业务流程</span>
            </div>
            <div style="margin-top:20px;">
                <div style="border:1px solid #f1f1f1;width:117px;height:117px;text-align:center;margin-bottom:20px;margin-right:18px;float:left;">
                    <img src="../images/index/13.png" />
                    <p><a href="#">收房量房</a></p>
                </div>
                <div style="border:1px solid #f1f1f1;width:117px;height:117px;text-align:center;margin-bottom:20px;margin-right:18px;float:left;">
                    <img src="../images/index/14.png" />
                    <p><a href="#">设计阶段</a></p>
                </div>
                <div style="border:1px solid #f1f1f1;width:117px;height:117px;text-align:center;margin-bottom:20px;margin-right:18px;float:left;">
                    <img src="../images/index/15.png" />
                    <p><a href="#">施工阶段</a></p>
                </div>
                <div style="border:1px solid #f1f1f1;width:117px;height:117px;text-align:center;margin-bottom:20px;margin-right:18px;float:left;">
                    <img src="../images/index/16.png" />
                    <p><a href="#">竣工验收</a></p>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        
        <!--业务流程-->
        <div id="MAR" style="width:1220px;margin:0 auto;">
            <div>
                <span style="font-size:30px;color:#333333;">建材超市</span>
            </div>
            <div style="width:381px;height:405px;border:1px solid #eeeeee;background:#fafafa;margin-top:20px;float:left;">
                <div id="hmindex2">
                    <div class="hmindexPic">
                        @{
                        List<AdvertInfo> mallbannerList = Adverts.GetAdvertList(48);
                        }<advertinfo>
                            <ul>
                                @foreach (AdvertInfo info in mallbannerList)
                        {
                                    <li><a href="@info.Url"><img original="@{@WorkContext.ImageCDN}/upload/adv/@info.Image" width="381" height="405" /></a></li>
                        }
                            </ul>
                            <div class="indexPicBT">
                                @for (int i = 1; i <= mallbannerList.Count; i++)
                        {
                                    <a href="#">@i</a>
                        }
                                <div class="clear"></div>
                            </div>
                            @if (mallbannerList.Count > 1)
                    {
                                <script type="text/javascript">
                            $("#hmindex2 .hmindexPic li").soChange({
                                thumbObj:"#hmindex2 .indexPicBT a",
                                thumbNowClass:"hot",
                                changeTime:4200,
                                autoChange:true,
                                slideTime:300
                            })
                                </script>
                    }

                        </advertinfo>

                    </div>
                </div>

                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
        <script src="@{@WorkContext.ScriptCDN}/components/layer/layer.js"></script>
    </div>
@Html.Partial("_footer")
</body>
</html>

