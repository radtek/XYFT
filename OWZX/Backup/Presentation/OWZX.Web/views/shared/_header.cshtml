<script>
    //导航切换
    $(function ()
    {
        var nva = 0; // 默认值为0，二级菜单向下滑动显示；值为1，则二级菜单向上滑动显示
        if (nva == 0)
        {
            $('.nva li').hover(function ()
            {
                $(this).css("background", "#4b505a");
                $('a', this).css("color", "#ffffff");
                $('.second', this).css('top', '40px').show();
            }, function ()
            {
                $(this).css("background", "white");
                $('a', this).not(".on").css("color", "#333333");
                $('.second', this).hide();
            });
        } else if (nva == 1)
        {
            $('.nva li').hover(function ()
            {
                $('.second', this).css('bottom', '40px').show();
            }, function ()
            {
                $('.second', this).hide();
            });
        }
    });
</script>
