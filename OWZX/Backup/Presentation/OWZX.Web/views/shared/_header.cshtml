.nva li {float: left;position: relative;height: 40px;line-height: 40px;}

.nva li .second {position: absolute;left: 0;display: none;z-index: 16;background: #01af63;}
.nva li .second a {font-size:16px;}
.header_search{position: relative;z-index: 9999;float: left;width:100%;}
.header_search .header_select_sort{height: 36px;border-right: 1px solid #eee;width: auto;background: #f9f9f9;text-decoration: none;position: relative;z-index: 120;display: inline-block;color: #666;padding-right: 15px;}
.header_search .header_select a.header_select_sort span b {background-position: -70px 0;width: 7px;height: 4px;top: 16px;float: left;position: relative;display: inline;}
.header_search .header_select ul {position: absolute;z-index: 99;background: #fff;top: 37px;padding: 5px 0;left: 0;display: none;}
.header_search .header_select ul li{width: 96px;overflow: hidden;height:36px;line-height: 30px; background: #f9f9f9;    text-indent: 16px}
.header_search .header_search_input { width: 300px;height: 30px;border: 1px solid #fff;float: left;line-height: 30px;color: #666;border: 0;display: inline;outline:none;}
.header_search .header_select a.header_select_sort span em {float: left;height: 36px;line-height: 35px;margin: 0 10px 0 15px;font-size: 12px;display: inline;}
.header_search .header_search_submit {border: 0;background: #01af63;width: 75px;height: 40px;text-align: center;font-size: 16px;color: #fff;cursor: pointer;outline: none;position: absolute;margin-left: 80px;top: -2px;}

</style>
<script>
    $(document).ready(function ()
    {
        $('.son_ul').hide(); //初始ul隐藏
        $('.header_select_sort').hover(function ()
        { //鼠标移动函数
            $(this).parent().find('ul.son_ul').slideDown();  //找到ul.son_ul显示
            $(this).parent().find('li').hover(function () { $(this).addClass('hover') }, function () { $(this).removeClass('hover') }); //li的hover效果
            $(this).parent().hover(function () { },
                                   function ()
                                   {
                                       $(this).parent().find("ul.son_ul").slideUp();
                                   }
                                   );
        }, function () { }
                                             );
        $('.son_ul li').click(function ()
        {
            $('.header_select_sort span').find('em').html($(this).html());
            $(this).parents('li').find('ul').slideUp();
        });
    }
                                             );
</script>
