@model RechargeListModel
@{
    ViewBag.Title = "userrechargelist";
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<html>
<head>

    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="/newstatic/css/reset.css" />
    <link rel="stylesheet" type="text/css" href="/newstatic/css/common.css" />
    <link rel="stylesheet" type="text/css" href="/newstatic/css/back.css" />
    <link rel="stylesheet" type="text/css" href="/newstatic/css/footer.css" />
    <script src="~/newstatic/js/jquery-1.11.3.min.js"></script>
    <style>
        .main p {
            line-height: 1.6em;
            background: #fff;
            margin: 1em 0;
            border-radius: 5px;
            padding: 10px;
        }

            .main p span.gm {
                font-size: 1.2em;
                line-height: 1.8em;
                color: #FD645E;
            }

            .main p span.yk {
                font-size: 1.2em;
                font-weight: bold;
                line-height: 1.8em;
                float: right;
            }

        .pg a {
            color: #999;
            margin-left: .5em;
            border: #ddd solid 1px;
            padding: 2px 4px;
            border-radius: 2px;
        }

        .pg span {
            color: #999;
            display: inline;
            margin-left: .5em;
        }

        .pg a.next {
            margin-right: 0;
            position: relative;
            top: 0;
            right: 0;
            z-index: 9999;
        }

        .pg a.prev {
            margin-left: 0;
            position: relative;
            top: 0;
            left: 0;
            z-index: 9999;
        }
    </style>
</head>

<body>
    <header>
        <h2><span onclick="history.go(-1)"><i class="icon"></i></span>充值记录</h2>
    </header>
    <div class="headblank"></div>
    <div class="main table">
        <table class="cha">
            <tr>
                <th>金额</th>
                <th>变动时间</th>
                <th>状态</th>
            </tr>
            @foreach (OWZX.Model.MD_Remit info in Model.RechargeList)
            {
                <tr>
                    <td>@info.Money</td>
                    <td>@info.Addtime.ToString("MM-dd HH:mm")</td>
                    <td>
                        @switch (info.Status)
                        {
                        case 0:
                            @:"待审核";
                        break;
                        case 1: @:"审核中";
                        break;
                        case 2: @:"充值成功";
                        break;
                        case 3: @:"充值失败";
                        break;
                        }
                    </td>
                </tr>
            }
            <tr id="showlists"><td colspan="3"><div class='ajaxtips' style='display:none;font-size:1.1em;color:#888;'>加载中.....</div></td></tr>
        </table>


    </div>
   
    <div class="footblank"></div>
    <!-- 底部导航 -->
    @Html.Partial("_footer")
    <!-- 底部导航 -->
    <script>
    var p = @Model.PageModel.PageIndex;
    var total=@Model.PageModel.TotalPages;

    if (p == "") p = 1;
    var stop = true;//触发开关，防止多次调用事件
    $(".table").scroll(function ()
    { 
        if(p==total) return;
        //当内容滚动到底部时加载新的内容 100当距离最底部100个像素时开始加载.
        if ($(this).scrollTop() + $(window).height() + 100 >= $(document).height() && $(this).scrollTop() > 100)
        {
            if (stop == true)
            {
                stop = false;
                p = p + 1;//当前要加载的页码
                //加载提示信息
                $(".ajaxtips").show();
                $.get("/api/userremit?page="+p, function (data)
                {
                    var nwbet="";
                    var dt=JSON.parse(data);
                    $.each(dt,function(){
                        nwbet+="<tr>";
                        nwbet+='<td >'+this.realmoney+'</td><td >'+this.addtime+'</td>';
                        nwbet+='<td >'+this.state+'</td>';
                        nwbet+="</tr>";
                    });
                    $(".ajaxtips").hide();
                    $("#showlists").before(nwbet);//把新的内容加载到内容的后面
                    stop = true;
                })
            }
        }
    });
    </script>

</body>
</html>

