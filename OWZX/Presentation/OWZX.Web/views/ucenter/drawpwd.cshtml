@model OWZX.Web.Models.SafeVerifyModel
@{
    Layout = null;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<HTML>
<HEAD>

    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <link rel="stylesheet" type="text/css" href="~/newstatic/css/reset.css" />
    <link rel="stylesheet" type="text/css" href="~/newstatic/css/common.css" />
    <link rel="stylesheet" type="text/css" href="~/newstatic/css/back.css" />
    <link rel="stylesheet" type="text/css" href="~/newstatic/css/footer.css" /> 
    <script src="~/newstatic/js/jquery-1.11.3.min.js"></script>
</HEAD>

<BODY>
    <header>
        <h2><span onclick="history.go(-1)"><i class="icon"></i></span>提现密码</h2>
    </header>
    <div class="headblank"></div>
    <div class="main">
        <form method="post" action="">
            <ul class="form">
                
                <li @if (!(bool)ViewData["isext"]) { <text>style="display:none;"</text>}
                    ><label>原密码</label><input type="password" id="oldpwd"></li> 
                <li><label>新密码</label><input type="password" id="pwd1"></li>
                <li><label>确认密码</label><input type="password" id="pwd2"></li>
                <a class="btn" id="btn" style="width:80%;margin:2em auto;display:block;">修改</a>
            </ul>
        </form>
    </div>

    <div class="footblank"></div>
<!-- 底部导航 --> 
    @Html.Partial("_footer")
<!-- 底部导航 -->  
<script type="text/javascript">
    $(function() { 

        $("#btn").click(function() {
            var oldpwd = $("#oldpwd").val();
            var pwd1 = $("#pwd1").val().trim();
            var pwd2 = $("#pwd2").val().trim();

            if (pwd1 != pwd2) {
                tishi("两次密码输入不一致");
                return false;
            }
            var isext='@ViewData["isext"]';
            if (pwd1 == "" || (isext.toLowerCase()=='true' && oldpwd == "")) {
                tishi("密码不可为空");
                return false;
            } else if (pwd1 == pwd2) {
                $.post('/appaccount/DrawPwd',
                    {
                        oldpwd: oldpwd,
                        password: pwd1
                    },
                    function(data) {
                        var result = eval('('+data+')'); 
                        if (result.state == "success")
                        {
                            tishi("保存成功");
                            window.location.href = "/ucenter/set";
                        }
                        else
                            tishi(result.biz_content);
                    });
            }
        }); 
    }); 

</script>
</BODY> 

</HTML>