@model OWZX.Web.Models.SafeVerifyModel
@{
    Layout = null;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<HTML>
    <HEAD>

        <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

        <link rel="stylesheet" type="text/css" href="~/newstatic/css/reset.css" />
        <link rel="stylesheet" type="text/css" href="~/newstatic/css/common.css" />
        <link rel="stylesheet" type="text/css" href="~/newstatic/css/back.css" />
        <link rel="stylesheet" type="text/css" href="~/newstatic/css/footer.css" />
        <style>
                 
.tishi{width:80%;position:fixed;top:100%;left:10%;background:#fff;z-index: 999;  border-radius: 5px;text-align:center;padding-bottom
:1em;}
.tishi .ts{line-height:2em;border-bottom:#eee solid 1px;font-size:1.2em;font-weight:700;}
.tishi .tsnr{line-height:2em;margin:1em .5em}
  </style>
 </HEAD>

 <BODY>
  <header>
	 <h2><span onclick="history.go(-1)"><i class="icon"></i></span>修改密码</h2>	
  </header>
  <div class="headblank"></div>
  <div class="main">
  <form method="post" action="">
      <ul class="form">
    	  <li><label>原密码</label><input type="text" id="oldpwd"></li>
    	  <li><label>新密码</label><input type="text" id="pwd1"></li>
    	  <li><label>确认密码</label><input type="text" id="pwd2"></li>
    	  <a class="btn" id="btn" style="width:80%;margin:2em auto;display:block;">修改</a>
	    </ul>
  </form>
  </div>
  
  <div class="footblank"></div>
   <!-- 底部导航 -->
     @Html.Partial("_footer")
 <!-- 底部导航 -->
  
  <!-- 提示框 -->
  <div class="betbg"></div>
  <div class="tishi">
     <div class="ts">提示</div>
     <div class="tsnr"></div>
     <div class="btn" style="width:80%;">确定</div>
  </div>
 </BODY>
<script src="~/newstatic/js/jquery-1.11.3.min.js"></script> 
 <script>
     $("#btn").click(function(){

      var URL='__URL__';
      var oldpwd = $("#oldpwd").val();
      var pwd1 = $("#pwd1").val();
      var pwd2 = $("#pwd2").val();

      if(pwd1 != pwd2)
      {
          tishi("两次密码输入不一致");
          return false;
      }
      else if(pwd1 == "" || oldpwd =="")
      {
          tishi("密码不可为空");
          return false;
      }
      $.ajax({
          url: URL+'/pwd',
          type:"POST",
          dataType: 'text',
          timeout: 5000,
          data:{
              oldpwd:oldpwd,
              pwd:pwd1
          },
          dataType:"json",
          success: function(data){
              if(data == 1)
                  tishi("修改成功");
              else if(data == 2)
                  tishi("旧密码有误");
              else
                  tishi("修改失败");
          }
      });
 })

$(".tishi .btn").click(function(){
  $(".betbg").fadeOut(100);
  $(".tishi").animate({top:"100%",marginTop:"0"},300);  
  });

function tishi(nr){
    $(".betbg").fadeIn(100);
    $(".tsnr").html(nr);
    $(".tishi").animate({top:"50%",marginTop:"-3.5em"},300);  
 }; 
 </script>
</HTML>
