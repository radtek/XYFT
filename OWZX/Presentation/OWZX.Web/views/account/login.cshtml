@model OWZX.Web.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>用户登录-@{@WorkContext.ShopConfig.SiteTitle}</title>
    @Html.Raw(WorkContext.ShopConfig.SEOKeyword)
    @Html.Raw(WorkContext.ShopConfig.SEODescription)
    <link href="@{@WorkContext.CSSCDN}/css/base.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/account.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/lgstyle.css" rel="stylesheet" />
    <script src="@{@WorkContext.ScriptCDN}/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/account.js" type="text/javascript"></script>
    <script type="text/javascript">
        returnUrl = "@Model.ReturnUrl";
        shadowName = "@Model.ShadowName";
        $(function ()
        {
            $(".cf input").on("keydown", function ()
            {
                if (event.keyCode == 13) login();
            });
        })
        
    </script>
    <style>
            
    </style>
</head>

<body >

<div id="loginTop" class="box">
    <a href="/" class="left"><img src="@{@WorkContext.ImageCDN}/images/logo.png" width="186" height="42" /></a>
    <h2>欢迎登录</h2>
    <div class="clear"></div>
</div>

@*<div class="box login">*@
    <!--登录-->
    <div style="width:1220px;margin:27px auto;background:white;">
        <div style="width:390px; height:270px;margin-left:220px;margin-right:160px;float:left;margin-top:60px;">
            <img src="@{@WorkContext.ImageCDN}/images/banner_01.png" />
        </div>
        <div style="float:left;">
            <div class="lanrenzhijia">
                <div class="title cf">
                    <ul class="title-list fr cf ">
                        <li>微信登录</li>
                        <li class="on">账号登录</li>
                        <p><b></b></p>
                    </ul>
                </div>
                <div class="product-wrap">
                    <!--案例1-->
                    <div class="product">
                        <div style="display:block;">
                            <span style="position: relative;width: 141px;height: 141px;left: 70px;display: block;text-align: center;">
                                <img src="@{@WorkContext.ImageCDN}/images/wxlg.png" width="140" height="140" style="margin:auto; border: 1px solid #efefef;" />
                            </span>
                        <span style="display: block;text-align: center;font-size: 14px;margin-top:15px;">微信扫码  快速登录</span>
                        </div>
                                
                           
                    </div>
                    <!--案例2-->
                    <div class="product show">
                        <form name="loginForm" action="">
                            <ul class="cf">
                                <li class="ml0">
                                    <input class="b1" type="text" name="@Model.ShadowName" id="@Model.ShadowName" placeholder="用户名/手机号" value="" /><br />
                                        <span class="phone" style="font-size:12px;color:red;height:22px;"></span><br />
                                    <input class="b1" type="password" id="password" name="password" placeholder="密码" value="" /><br />
                                        <span class="password" style="font-size:12px;color:red;height:22px;"></span>
                                </li>
                                <li style=" height:25px;line-height:25px;margin-top:10px;text-align:center;">
                                    <span style="float:left;"><input style="width:15px; height:15px;margin-top:5px;outline: medium;" name="isRemember" type="checkbox" /></span>
                                    <span style="text-align:center;float:left; margin-left:12px;">下次自动登录</span>
                                    <span style="float:right; margin-left:115px; color:#3b3b3b;"><a style="color:#3b3b3b;" href="@Url.Action("findpwd")">忘记密码?</a></span>
                                </li>
                                <li class="loginBt">
                                    <a class="redBT loginIn" style="text-align:center;" href="javascript:void(0)" onclick="login()">立即登录</a>
                                </li>
                                <li style="float:right;margin-top:10px;"><a style="color:#9e9e9e;" href="@Url.Action("register")">免费注册</a></li>
                            </ul>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>

