@model OWZX.Web.Admin.Models.UserRemit
           
@section header{
    <title>审核充值信息</title>
    <link type="text/css" rel="stylesheet" href="/administration/css/site.css"/>
    <script type="text/javascript" src="/administration/scripts/jquery.js"></script>
    <script type="text/javascript" src="/administration/scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/administration/scripts/jquery.validate.unobtrusive.js"></script>
}
@section body{
    <h1 class="rightH1">
        充值记录 &gt;&gt; 审核充值信息
        <div class="right">
            <a href="@Html.Raw(ViewData["referer"].ToString())" class="menuBT">
                <img src="/administration/images/goback.jpg" />返回列表</a>
            <div class="clear">
            </div>
        </div>
        <div class="clear">
        </div>
    </h1>
    @using (Html.BeginForm())
    {
        <div class="addTable">
                <table width="100%">
                    <tr>
                        <td width="100px" align="right">
                            账号：
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "input", size = "35", disabled = "disabled" })
                        </td>
                    </tr>
                    <tr>
                        <td width="100px" align="right">
                            充值昵称：
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.Name, new { @class = "input", size = "35", disabled = "disabled" })
                        </td>
                    </tr>
                    <tr>
                        <td width="100px" align="right">
                            充值账号：
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.Account, new { @class = "input", size = "35", disabled = "disabled" })
                        </td>
                    </tr>
                    <tr>
                        <td width="100px" align="right">
                            充值金额：
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.Money, new { @class = "input", size = "35", disabled = "disabled" })
                        </td>
                    </tr>
                    <tr>
                        <td width="100px" align="right">
                            充值类型：
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.Type, new { @class = "input", size = "35", disabled = "disabled" })
                        </td>
                    </tr>
                    <tr>
                        <td width="100px" align="right">
                            充值时间：
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.Addtime, new { @class = "input", size = "35", disabled = "disabled" })
                        </td>
                    </tr>
                    <tr>
                    <td width="100px" align="right">
                        实际充值金额：
                    </td>
                    <td>
                        <input type="hidden" id="remitid"  value="@ViewData["remitid"]"/>
                        <input type="hidden" id="status" value="@ViewData["status"] " />
                        @Html.TextBoxFor(x => x.RealMoney, new { @class = "input", size = "35" })
                        @Html.ValidationMessageFor(x => x.RealMoney)
                    </td>
                    </tr>
                    <tr>
                        <td width="100px" align="right">
                            审核备注：
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.ChargeRemark, new { @class = "input", size = "35"})
                            @Html.ValidationMessageFor(x => x.ChargeRemark)
                        </td>
                    </tr>
                 
                    <tr>
                        <td width="100px" align="right">
                            异常备注：
                        </td>
                        <td>
                            @Html.TextBoxFor(x => x.Remark
                            , new { @class = "input", size = "35" })
                            @Html.ValidationMessageFor(x => x.Remark)
                        </td>
                    </tr>

                    <tr>
                        <td align="right">
                            &nbsp;
                        </td>
                        <td>
                            <a href="" class="addBt" id="sumbitBut">
                                <img src="/administration/images/submit.jpg" /></a>
                            <script type="text/javascript">
                                $(function () {
                                    $("#sumbitBut").click(function () {
                                        $("form:first").submit();
                                        return false;
                                    })
                                });
                            </script>
                        </td>
                    </tr>
                    <tr>
                        <td align="right">
                            &nbsp;
                        </td>
                        <td>
                            &nbsp;
                        </td>
                    </tr>
                </table>
        </div>
    }

    
}
