{
<div class="addTable">
<table width="100%">
  <tr>
    <td width="86px" align="right">用户名：</td>
    <td>
    @Html.TextBoxFor(x => x.UserName.TrimEnd(), new { @class = "input", size = "35",@readonly="true"})</td>
    </tr>

      <tr>
    <td align="right">登录密码：</td>
    <td>@Html.TextBoxFor(x => x.Password.TrimEnd(), new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Password)</td>
    </tr>
          <tr>
    <td align="right">提现密码：</td>
    <td>@Html.TextBoxFor(x => x.DrawPwd.TrimEnd(), new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.DrawPwd)</td>
    </tr>
          <tr>
    <td align="right">余额：</td>
    <td>@Html.TextBoxFor(x => x.TotalMoney, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.TotalMoney)</td>
    </tr>
